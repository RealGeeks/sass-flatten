#!/usr/bin/env node

'use strict';

var path = require('path');
var fs = require('fs');
var read = fs.readFileSync;
var write = fs.writeFileSync;

var flatten = require('../');
var meow = require('meow');
var getStdin = require('get-stdin');

var HELP_TEXT = `
Usage
  sass-flatten <input scss file> [output scss file]

Options
  --include-path            Path to look for imported files
`;

var cli = meow(HELP_TEXT, {
  pkg: require('../package.json')
});

var src = cli.input[0];
var dest = cli.input[1] || src;

var inc = cli.flags.includePath || path.dirname(src);

if (src) {
  try {
    console.log(`Opening file at ${src}...`);
    const inputFile = read(src, 'utf8');

    console.log('Flattening...');
    const flattened = flatten(inputFile, inc);

    console.log(`Writing flat file to ${dest}...`);
    write(dest, flattened);
  }
  catch(error) {
    console.error(JSON.stringify(error, null, 2));
    throw error;
  }
} else {
  getStdin()
    .then(function (data) {
      return flatten(data, inc);
    }).then(function (flat) {
      console.log(flat);
    });
}
