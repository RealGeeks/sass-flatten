#!/usr/bin/env node

'use strict';

var path = require('path');
var fs = require('fs');
var read = fs.readFileSync;
var write = fs.writeFileSync;

var flatten = require('../');
var meow = require('meow');
var getStdin = require('get-stdin');

var HELP_TEXT = `
Usage
  sass-flatten <input scss file> [output scss file]

Options
  --include-path            Path to look for imported files
`;

var cli = meow(HELP_TEXT, {
  pkg: require('../package.json')
});

var src = cli.input[0];
var dest = cli.input[1] || src;

var inc = cli.flags.includePath || path.dirname(src);

if (src) {
  write(dest, flatten(read(src, 'utf8'), inc));
} else {
  getStdin()
    .then(function (data) {
      console.log(flatten(data, inc));
    })
    .catch(function (err) {
      console.error(err);
      console.log(`An input scss file path is required.\n${HELP_TEXT}`);
    });
}
